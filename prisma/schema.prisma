generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
  COUNSELOR
  TEACHER
  STUDENT
  PARENT
  GUEST
}

enum UserSex {
  MALE
  FEMALE
}

enum Day {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
}

model User {
  id              String  @id @default(uuid())
  username        String  @unique
  email           String? @unique
  phone           String? @unique
  password        String
  role            Role    @default(GUEST)
  isActive        Boolean @default(true)
  isEmailVerified Boolean @default(false)

  failedLoginAttempts  Int       @default(0)
  lockedUntil          DateTime?
  passwordResetToken   String?
  passwordResetExpires DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions  Session[]
  auditLogs AuditLog[]

  // role profiles (NO foreign keys here)
  student Student?
  teacher Teacher?
  parent  Parent?
  admin   Admin?

  @@map("users")
}

model Session {
  id               Int      @id @default(autoincrement())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  refreshTokenHash String
  userAgent        String?
  ipAddress        String?
  createdAt        DateTime @default(now())
  expiresAt        DateTime
  revoked          Boolean  @default(false)

  @@index([userId])
  @@map("sessions")
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  action    String
  meta      Json?
  createdAt DateTime @default(now())

  @@map("audit_logs")
}

model Admin {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("admins")
}

model Teacher {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  username  String   @unique
  name      String
  surname   String
  email     String?  @unique
  phone     String?  @unique
  address   String
  img       String?
  bloodType String
  sex       UserSex
  birthday  DateTime
  createdAt DateTime @default(now())

  subjects Subject[]
  periods  Period[]
  classes  Class[]

  @@map("teachers")
}

model Parent {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  username  String   @unique
  name      String
  surname   String
  email     String?  @unique
  phone     String   @unique
  address   String
  createdAt DateTime @default(now())

  students Student[]

  @@map("parents")
}

model Student {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  username  String   @unique
  name      String
  surname   String
  email     String?  @unique
  phone     String?  @unique
  address   String
  img       String?
  bloodType String
  sex       UserSex
  birthday  DateTime
  createdAt DateTime @default(now())

  parentId String
  parent   Parent @relation(fields: [parentId], references: [id])

  classId Int
  class   Class @relation(fields: [classId], references: [id])

  gradeId Int
  grade   Grade @relation(fields: [gradeId], references: [id])

  attendances Attendance[]
  results     Result[]

  @@map("students")
}

model Grade {
  id    Int @id @default(autoincrement())
  level Int @unique

  students Student[]
  classes  Class[]

  @@map("grades")
}

model Class {
  id       Int    @id @default(autoincrement())
  name     String @unique
  capacity Int

  gradeId Int
  grade   Grade @relation(fields: [gradeId], references: [id])

  supervisorId String?
  supervisor   Teacher? @relation(fields: [supervisorId], references: [id])

  periods       Period[]
  students      Student[]
  events        Event[]
  announcements Announcement[]
  Exam          Exam[]

  @@map("classes")
}

model Subject {
  id   Int    @id @default(autoincrement())
  name String @unique

  teachers Teacher[]
  periods  Period[]
  Exam     Exam[]

  @@map("subjects")
}

model Period {
  id        Int      @id @default(autoincrement())
  name      String
  day       Day
  startTime DateTime
  endTime   DateTime

  subjectId Int
  subject   Subject @relation(fields: [subjectId], references: [id])

  classId Int
  class   Class @relation(fields: [classId], references: [id])

  teacherId String
  teacher   Teacher @relation(fields: [teacherId], references: [id])

  exams       Exam[]
  assignments Assignment[]
  attendances Attendance[]

  @@map("periods")
}

enum ExamType {
  CLASS_TEST
  MID_TERM
  TERM_FINAL
  RETAKE
}

model Exam {
  id        Int      @id @default(autoincrement())
  title     String
  type      ExamType
  startTime DateTime
  endTime   DateTime

  periodId Int
  period   Period @relation(fields: [periodId], references: [id])

  classId Int? // Only for mid-term / final exams
  class   Class? @relation(fields: [classId], references: [id])

  subjectId Int? // Only for class tests
  subject   Subject? @relation(fields: [subjectId], references: [id])

  originalExamId Int?
  originalExam   Exam?  @relation("RetakeReference", fields: [originalExamId], references: [id])
  retakes        Exam[] @relation("RetakeReference")

  results Result[]

  @@map("exams")
}

model Assignment {
  id        Int      @id @default(autoincrement())
  title     String
  startDate DateTime
  dueDate   DateTime

  periodId Int
  period   Period @relation(fields: [periodId], references: [id])

  results Result[]

  @@map("assignments")
}

model Result {
  id    Int @id @default(autoincrement())
  score Int

  studentId String
  student   Student @relation(fields: [studentId], references: [id])

  examId       Int?
  exam         Exam?       @relation(fields: [examId], references: [id])
  assignmentId Int?
  assignment   Assignment? @relation(fields: [assignmentId], references: [id])

  @@map("results")
}

model Attendance {
  id      Int      @id @default(autoincrement())
  date    DateTime
  present Boolean

  studentId String
  student   Student @relation(fields: [studentId], references: [id])

  periodId Int
  period   Period @relation(fields: [periodId], references: [id])

  @@map("attendances")
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  startTime   DateTime
  endTime     DateTime

  classId Int?
  class   Class? @relation(fields: [classId], references: [id])

  @@map("events")
}

model Announcement {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime

  classId Int?
  class   Class? @relation(fields: [classId], references: [id])

  @@map("announcements")
}
