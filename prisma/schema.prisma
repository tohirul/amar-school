generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
  COUNSELOR
  TEACHER
  STUDENT
  PARENT
  GUEST
}

enum UserSex {
  MALE
  FEMALE
}

enum Day {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
}

enum PeriodStatus {
  ACTIVE
  CANCELLED
}

enum AttendanceType {
  REGULAR
  EXAM
}

enum ExamCategory {
  TERMINAL
  CLASS_TEST
  POP_QUIZ
  RETAKE
}

enum AssignmentType {
  PERIODIC
  WEEKLY
  SEMESTER
  TERMINAL
}

enum GradeLetter {
  A_PLUS
  A
  A_MINUS
  B
  C
  D
  F
}

model User {
  id              String   @id @default(uuid())
  username        String   @unique
  email           String?  @unique
  phone           String?
  password        String
  role            Role     @default(GUEST)
  isActive        Boolean  @default(true)
  isEmailVerified Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  failedLoginAttempts  Int       @default(0)
  lockedUntil          DateTime?
  passwordResetToken   String?
  passwordResetExpires DateTime?

  sessions  Session[]
  auditLogs AuditLog[]

  student Student?
  teacher Teacher?
  parent  Parent?
  admin   Admin?

  @@map("users")
}

model Session {
  id               Int      @id @default(autoincrement())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  refreshTokenHash String
  userAgent        String?
  ipAddress        String?
  createdAt        DateTime @default(now())
  expiresAt        DateTime
  revoked          Boolean  @default(false)

  @@index([userId])
  @@map("sessions")
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  action    String
  meta      Json?
  createdAt DateTime @default(now())

  @@map("audit_logs")
}

model Admin {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@map("admins")
}

model Teacher {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name    String
  surname String
  email   String?
  phone   String?

  subjects Subject[] @relation("TeacherSubjects")

  periods    Period[]
  sections   Section[]
  classes    Class[]
  Assignment Assignment[]
  createdAt  DateTime     @default(now())

  @@map("teachers")
}

model Parent {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name      String
  surname   String
  phone     String
  address   String?
  students  Student[]
  createdAt DateTime  @default(now())

  @@map("parents")
}

model Student {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name     String
  surname  String
  sex      UserSex
  birthday DateTime

  parentId String
  parent   Parent @relation(fields: [parentId], references: [id], onDelete: Cascade)

  sectionId Int
  section   Section @relation(fields: [sectionId], references: [id])

  classId Int
  class   Class @relation(fields: [classId], references: [id])

  attendances Attendance[]
  results     Result[]
  gpas        GPA[]
  createdAt   DateTime     @default(now())

  @@map("students")
}

model Class {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?

  supervisorId String?
  supervisor   Teacher? @relation(fields: [supervisorId], references: [id])

  sections      Section[]
  semesters     Semester[]
  events        Event[]
  announcements Announcement[]
  students      Student[]

  @@map("classes")
}

model Section {
  id             Int     @id @default(autoincrement())
  name           String
  capacity       Int
  roomNumber     String
  classTeacherId String?

  classId Int
  class   Class @relation(fields: [classId], references: [id])

  classTeacher Teacher? @relation(fields: [classTeacherId], references: [id])

  students Student[]
  periods  Period[]
  exams    Exam[]
  gpas     GPA[]

  @@unique([classId, name])
  @@map("sections")
}

model Semester {
  id        Int      @id @default(autoincrement())
  name      String
  startDate DateTime
  endDate   DateTime

  classId Int
  class   Class @relation(fields: [classId], references: [id])

  examSessions ExamSession[]
  gpas         GPA[]

  @@map("semesters")
}

model ExamSession {
  id        Int      @id @default(autoincrement())
  name      String
  startDate DateTime
  endDate   DateTime

  semesterId Int
  semester   Semester @relation(fields: [semesterId], references: [id])

  exams Exam[]

  @@map("exam_sessions")
}

model Subject {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  periods  Period[]
  exams    Exam[]
  teachers Teacher[] @relation("TeacherSubjects")
}

model Period {
  id        Int          @id @default(autoincrement())
  name      String
  day       Day
  order     Int
  startTime DateTime
  endTime   DateTime
  status    PeriodStatus @default(ACTIVE)

  sectionId Int
  section   Section @relation(fields: [sectionId], references: [id])

  subjectId Int
  subject   Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  teacherId String
  teacher   Teacher @relation(fields: [teacherId], references: [id])

  assignments Assignment[] // 1:N
  exams       Exam[] // 1:N
  attendances Attendance[]

  @@unique([sectionId, day, order])
  @@map("periods")
}

model Attendance {
  id      Int            @id @default(autoincrement())
  date    DateTime
  present Boolean
  type    AttendanceType @default(REGULAR)

  studentId String
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  periodId Int
  period   Period @relation(fields: [periodId], references: [id], onDelete: Cascade)

  @@unique([studentId, periodId, date])
  @@map("attendances")
}

model Exam {
  id         Int          @id @default(autoincrement())
  title      String
  category   ExamCategory
  examDate   DateTime
  startTime  DateTime
  endTime    DateTime
  totalMarks Int

  subjectId Int
  subject   Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  sectionId Int?
  section   Section? @relation(fields: [sectionId], references: [id])

  periodId Int?
  period   Period? @relation(fields: [periodId], references: [id])

  examSessionId Int?
  examSession   ExamSession? @relation(fields: [examSessionId], references: [id])

  originalExamId Int?
  originalExam   Exam?  @relation("Retake", fields: [originalExamId], references: [id])
  retakes        Exam[] @relation("Retake")

  results Result[]

  @@map("exams")
}

model Assignment {
  id           Int            @id @default(autoincrement())
  title        String
  description  String?
  instructions String?
  type         AssignmentType
  totalMarks   Int
  startDate    DateTime
  dueDate      DateTime

  periodId Int?
  period   Period? @relation(fields: [periodId], references: [id])

  teacherId String
  teacher   Teacher @relation(fields: [teacherId], references: [id])

  results Result[]

  @@map("assignments")
}

model Result {
  id      Int     @id @default(autoincrement())
  score   Int
  remarks String?

  studentId String
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  examId Int?
  exam   Exam? @relation(fields: [examId], references: [id])

  assignmentId Int?
  assignment   Assignment? @relation(fields: [assignmentId], references: [id])

  gpaId Int?
  gpa   GPA? @relation(fields: [gpaId], references: [id])

  @@map("results")
}

model GPA {
  id    Int         @id @default(autoincrement())
  value Float
  grade GradeLetter

  studentId String
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  semesterId Int
  semester   Semester @relation(fields: [semesterId], references: [id])

  sectionId Int
  section   Section @relation(fields: [sectionId], references: [id])

  results Result[]

  @@unique([studentId, semesterId, sectionId])
  @@map("gpas")
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  startTime   DateTime
  endTime     DateTime

  classId Int?
  class   Class? @relation(fields: [classId], references: [id])

  @@map("events")
}

model Announcement {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  classId     Int?
  class       Class?   @relation(fields: [classId], references: [id])

  @@map("announcements")
}
